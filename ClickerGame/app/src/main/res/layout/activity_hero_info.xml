<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hero_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ceon.clickergame.HeroInfo"
    android:background="@color/colorAccent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/follower5"
        android:id="@+id/hero_image"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:layout_alignTop="@+id/hero_cost"
        android:layout_alignLeft="@+id/hero_desc"
        android:layout_alignStart="@+id/hero_desc" />

    <TextView
        android:text="Hero Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hero_name"
        android:layout_alignTop="@+id/hero_image"
        android:layout_toRightOf="@+id/hero_desc"
        android:layout_toEndOf="@+id/hero_desc" />

    <TextView
        android:text="Hero DPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hero_dps"
        android:layout_alignBottom="@+id/hero_image"
        android:layout_alignLeft="@+id/hero_name"
        android:layout_alignStart="@+id/hero_name" />

    <TextView
        android:text="Hero Cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hero_cost"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/hero_name"
        android:layout_toEndOf="@+id/hero_name"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp" />

    <TextView
        android:text="Hero Desc."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:id="@+id/hero_desc"
        android:layout_below="@+id/hero_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
