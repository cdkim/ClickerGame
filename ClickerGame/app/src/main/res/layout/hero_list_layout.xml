<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:descendantFocusability="blocksDescendants"
    tools:context="com.example.ceon.clickergame.HeroListLayout"
    android:background="@color/colorAccent"
    android:padding="5dp"
    >

    <TextView
        android:text="Hero DPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hero_dps"
        android:textColor="@android:color/black"
        android:layout_alignBottom="@+id/hero_image"
        android:layout_toRightOf="@+id/DPS:"
        android:layout_toEndOf="@+id/DPS:" />

    <TextView
        android:text="LVL:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level_label"
        android:textColor="@android:color/black"
        android:layout_above="@+id/DPS:"
        android:layout_alignLeft="@+id/hero_name"
        android:layout_alignStart="@+id/hero_name" />

    <TextView
        android:text="Hero Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/hero_name"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:layout_above="@+id/level_label"
        android:layout_toRightOf="@+id/hero_image"
        android:layout_toEndOf="@+id/hero_image" />

    <TextView
        android:text="Hero LVL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hero_level"
        android:textColor="@android:color/black"
        android:layout_below="@+id/hero_name"
        android:layout_toRightOf="@+id/DPS:"
        android:layout_toEndOf="@+id/DPS:" />

    <TextView
        android:text="DPS: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DPS:"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/hero_dps"
        android:layout_alignBottom="@+id/hero_dps"
        android:layout_alignLeft="@+id/level_label"
        android:layout_alignStart="@+id/level_label" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/follower1"
        android:id="@+id/hero_image"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="9dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hero_buy"
        style="@style/Widget.AppCompat.Button"
        android:minWidth="75dp"
        android:minHeight="45dp"
        android:background="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:layout_alignBottom="@+id/hero_dps"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>
